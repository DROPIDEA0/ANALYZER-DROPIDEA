modules = ["php-8.2", "nodejs-20", "web", "bash", "postgresql-16"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true
integrations = ["javascript_openai:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Server"

[[workflows.workflow]]
name = "Laravel Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p storage/framework/{sessions,views,cache} && php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 44447
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "mkdir -p storage/framework/{sessions,views,cache} && php artisan config:cache && php artisan route:cache && php artisan view:cache && php -S 0.0.0.0:5000 -t public"]
build = ["npm", "run", "build"]
